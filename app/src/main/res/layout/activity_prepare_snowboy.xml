<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyril_rayan.callnow.PrepareSnowboyActivity">

    <TextView
        android:id="@+id/notation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/snowboy_voice_prepare_hint"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/notation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Voice1"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/start_record1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/microphone"
                android:text="@string/record_you_voice" />

            <ImageButton
                android:id="@+id/stop_record1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="8.31"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/stop_button"
                android:text="stop" />

            <ImageButton
                android:id="@+id/playback1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"
                android:text="play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Voice2"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/start_record2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/microphone"
                android:text="@string/record_you_voice" />

            <ImageButton
                android:id="@+id/stop_record2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="8.31"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/stop_button"
                android:text="stop" />

            <ImageButton
                android:id="@+id/playback2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"
                android:text="play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Voice3"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/start_record3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/microphone"
                android:text="@string/record_you_voice" />

            <ImageButton
                android:id="@+id/stop_record3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="8.31"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/stop_button"
                android:text="stop" />

            <ImageButton
                android:id="@+id/playback3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"
                android:text="play" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:drawableTop="@drawable/zm_share_btn_pressed"
        android:text="Generate Model"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>
