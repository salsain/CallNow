<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.cyril_rayan.callnow.MainFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                           android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/runUserSelectContactsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/button_margin_text"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/select_contracts"
                    android:textSize="@dimen/text_size_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/button_margin"
                    android:gravity="center"
                    android:text="Select Contacts" />

                <ImageButton
                    android:id="@+id/runManualAddContactsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/button_margin_text"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_contacts"
                    android:textSize="@dimen/text_size_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/button_margin"
                    android:gravity="center"
                    android:text="Add Contacts for call" />

                <ImageButton
                    android:id="@+id/runImportCRMContactsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/button_margin_text"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/import_crm_contact"
                    android:textSize="@dimen/text_size_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/button_margin"
                    android:gravity="center"
                    android:text="Import CRM Contacts" />

                <ImageButton
                    android:id="@+id/makeCallsButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/button_margin_text"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/voicetip"
                    android:textSize="@dimen/text_size_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/button_margin"
                    android:gravity="center"
                    android:text="Make Calls" />

                <ImageButton
                  android:id="@+id/autoConnectToZoom"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginBottom="@dimen/button_margin_text"
                  android:layout_weight="1"
                  android:background="#00000000"
                  android:scaleType="fitCenter"
                  android:src="@drawable/voicetip"
                  android:textSize="@dimen/text_size_main" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/button_margin"
                  android:gravity="center"
                  android:text="AutoConnect to Zoom" />


                <TextView
                    android:id="@+id/makeCallsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We call to next contacts:"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <include
            android:id="@+id/listLayout"
            layout="@layout/select_contacts_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
