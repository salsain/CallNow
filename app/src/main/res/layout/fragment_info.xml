<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.resiligence.callnow.InfoFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:src="@mipmap/info" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Call Now is an app which helps with safe Calls While Driving"
            android:textColor="@color/DarkGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Since there are 1.6 million accidents caused by phone usage while driving, according to the National Safety Council, we built CallNow,an app that promotes safe calling for all and accelerated daily follow up calls for sales people. "
            android:textColor="#89899B"
            android:textSize="18sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/makeCallsText"
            android:gravity="left"
            android:text="Help"
            android:textColor="@color/DarkGrey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/makeCallsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="If a particular call goes to voicemail, you can say “End Call” and the CallNow app will end the call and go to the next call if there is one."
            android:textColor="#89899B"
            android:textSize="16sp"
            android:visibility="visible" />
        <Button
            android:id="@+id/runSubscriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscriptions"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>
